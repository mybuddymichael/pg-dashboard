%section.icps
  .header Icps
  - @all_icps.each do |icp|
    - if icp[:status] == :bad
      %div{class: "icp card #{icp[:status]}"}
        .title
          .name
            =icp[:name]
          .status-indicator
            &#33;
        .messages
          - icp[:messages].each do |message|
            .message= message
        .details
          = icp[:company_name]
          .detail
            .bold Field:
            = icp[:field_name]
          .detail
            .bold Lease:
            = icp[:lease_name]
          .detail
            .bold Area:
            = icp[:area_name]
  .divider
  - @all_icps.each do |icp|
    - if icp[:status] == :good
      %div{class: "icp card #{icp[:status]}"}
        .title
          .name
            =icp[:name]
        .messages
        .details
          = icp[:company_name]
          .detail
            .bold Field:
            = icp[:field_name]
          .detail
            .bold Lease:
            = icp[:lease_name]
          .detail
            .bold Area:
            = icp[:area_name]

%section.ci-projects
  .header Jenkins Project
  - @ci_projects.each do |project|
    - if project[:last_build_result] == :bad or project[:last_build_result] == :ignored
      %div{class: "jenkins card #{project[:last_build_result]}"}
        .title
          .name= link_to(project[:name], project[:last_build_url],
            :target => "_blank")
          .status-indicator
            &#33;
        .messages
  .divider
  - @ci_projects.each do |project|
    - if project[:last_build_result] == :good
      %div{class: "jenkins card #{project[:last_build_result]}"}
        .title
          .name= link_to(project[:name], project[:last_build_url],
            :target => "_blank")
        .messages
