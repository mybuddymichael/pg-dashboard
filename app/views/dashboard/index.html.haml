%header refreshing in 10 seconds...
.content

  %section.icps
    - @all_icps.each do |icp|
      %div{class: "card #{icp[:status]}", id: "#{icp[:name]}"}
        .name
          =icp[:name]
        - if icp[:status] == :good
          .status-indicator &#x2714;
        - else
          .status-indicator &#x2718;
        - if !icp[:messages].empty?
          .messages
            - icp[:messages].each do |message|
              .message= message

  %section.ci-projects
    .header Jenkins projects
    - @ci_projects.each do |project|
      %div{class: "card #{project[:last_build_result]}"}
        .name= project[:name]
        - if project[:last_build_result] == :good
          .status-indicator ✔
        - else
          .status-indicator ✘
